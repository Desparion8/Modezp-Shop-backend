{
	"name": "20-myshop",
	"version": "1.0.0",
	"description": "MERN shopping cart app",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node backend/server",
		"server": "nodemon backend/server",
		"client": "npm start --prefix my-shop",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"render-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix my-shop && npm run build --prefix my-shop",
		"data:import": "node backend/seeder",
		"data:destroy": "node backend/seeder -d"
	},
	"author": "Mateusz Wo≈õ",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.7.5",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1"
	},
	"devDependencies": {
		"concurrently": "^7.6.0",
		"nodemon": "^2.0.20"
	}
}
